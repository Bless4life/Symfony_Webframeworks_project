{% extends 'base.html.twig' %}

{% block title %}Club{% endblock %}

{% block body %}
    <h1>Club</h1>



    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ club.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ club.name }}</td>
            </tr>
            <tr>
                <th>Members</th>
                <td>{{ club.id }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('club_index') }}">Leave club</a>

    {% if is_granted('ROLE_ADMIN') %}
        <a href="{{ path('club_edit', {'id': club.id}) }}">edit</a>
    {% endif %}

    <div class="row">
        <div class="col-sm-12">

            <button type="submit" class="btn btn-info">Comment</button>
        </div>
    </div>

    {% for comment in club.comments %}
        <div class="row">
            <div class="col-sm-12">

                <div class="comment-container d-inline-block pl-3 align-top">
                    <span class="commenter-name">{{ comment.authorName }}</span>
                    <br>
                    <span class="comment"> {{ comment.content }}</span>
                    <p><a href="#">Reply</a></p>
                </div>
            </div>
        </div>
    {% endfor %}



        {% if is_granted('ROLE_ADMIN') %}
        {{ include('club/_delete_form.html.twig') }}
    {% endif %}

{% endblock %}
